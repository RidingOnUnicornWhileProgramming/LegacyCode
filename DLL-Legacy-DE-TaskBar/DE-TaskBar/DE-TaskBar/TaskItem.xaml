<UserControl
	x:Name="DETaskModel"
	x:Class="DETaskBar.TaskItem" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Height="50"
	MouseLeftButtonUp="TaskClicked"
	MouseEnter="UserControl_MouseEnter"
	MouseLeave="TaskBarWidget_MouseLeave"
	Background="#33000000"
	RenderTransformOrigin="0.5,0.5">
	<Grid
		Height="48">
		<Image
			x:Name="TaskImage"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			Height="15"
			Width="15"
			Margin="0,0,0,0" />
		<Label
			x:Name="TaskText"
			Content="Label"
			Foreground="White"
			FontSize="12"
			Height="25"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Center"
			Margin="25,0,0,0" />
	</Grid>
</UserControl>