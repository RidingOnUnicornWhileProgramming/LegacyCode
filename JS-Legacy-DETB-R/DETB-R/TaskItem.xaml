<UserControl x:Name="DETaskModel" x:Class="DETB_R.TaskItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Height="50" Width="150" MouseLeftButtonUp="TaskClicked" MouseEnter="UserControl_MouseEnter" MouseLeave="TaskBarWidget_MouseLeave" Background="#33000000">
    <Grid>
        <Image x:Name="TaskImage" Width="50" Height="50" HorizontalAlignment="Left"  />
        <Label x:Name="TaskText"  Content="Label" Margin="50,0,0,0" Foreground="White" FontSize="10" VerticalAlignment="Center"/>
    </Grid>
</UserControl>